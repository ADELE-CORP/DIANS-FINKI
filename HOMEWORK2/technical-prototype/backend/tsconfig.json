{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src",
        "esModuleInterop": true,
        "outDir": "./dist",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
